{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			]
		},
		{
			"label": "Compile EAP File",
			"type": "shell",
			"command": "pli10",
			"args": [
			  "${file}"
			],
			"problemMatcher": [],
			"detail": "Compile the EAP file using pli10"
		  }
	]
}
