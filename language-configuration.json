{
    "comments": {
      "lineComment": "//",
      "blockComment": ["/*", "*/"]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'", "notIn": ["string", "comment"] },
      { "open": "\"", "close": "\"", "notIn": ["string"] },
      { "open": "`", "close": "`", "notIn": ["string", "comment"] },
      { "open": "/**", "close": " */", "notIn": ["string"] }
    ],
    "indentationRules": {
      "increaseIndentPattern": "^(.*(ΑΡΧΗ|ΔΕΔΟΜΕΝΑ|ΕΑΝ|ΓΙΑ|ΕΝΟΣΩ|ΑΛΛΙΩΣ|ΜΕΧΡΙ|ΜΕ ΒΗΜΑ|ΕΠΑΝΑΛΑΒΕ|ΤΟΤΕ|ΣΤΑΘΕΡΕΣ|ΕΙΣΟΔΟΣ|ΕΞΟΔΟΣ).*)$",
      "decreaseIndentPattern": "^(.*(ΕΑΝ-ΤΕΛΟΣ|ΕΠΑΝΑΛΑΒΕ-ΤΕΛΟΣ|ΕΝΟΣΩ-ΤΕΛΟΣ|ΤΕΛΟΣ-ΔΙΑΔΙΚΑΣΙΑΣ|ΓΙΑ-ΤΕΛΟΣ|ΤΕΛΟΣ).*)$"
    },
    "onEnterRules": [
      {
        "beforeText": "^(.*(ΕΑΝ-ΤΕΛΟΣ|ΓΙΑ-ΤΕΛΟΣ|ΕΠΑΝΑΛΑΒΕ-ΤΕΛΟΣ|ΕΝΟΣΩ-ΤΕΛΟΣ|ΑΛΛΙΩΣ-ΤΕΛΟΣ|ΜΕΧΡΙ-ΤΕΛΟΣ).*)$",
        "action": { "indent": "none" }
      },
      {
        "previousLineText": "^(.*(ΤΕΛΟΣ).*)$",
        "action": { "indent": "outdent" }
      },
      {
        "beforeText": "^(.*(ΕΑΝ|ΓΙΑ|ΕΠΑΝΑΛΑΒΕ|ΕΝΟΣΩ|ΑΛΛΙΩΣ|ΜΕΧΡΙ).*)$",
        "action": { "indent": "indent" }
      },
        {
            "beforeText": "^(\\s*)$",
            "action": {
              "indent": "none"
            }
        }
    ]
  }
